<div class="mt-4">
    <h3>Sửa bài viết</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input value="{{course.name}}" type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="image">hình ảnh</label>
            <input value="{{course.image}}" type="text" class="form-control" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">video</label>
            <input value="{{course.videoId}}" type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input value="{{course.level}}" type=" text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
